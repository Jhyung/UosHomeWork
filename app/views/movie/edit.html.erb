<div class="container">
    <form action="/movie/model_update" method='get'>
        <input value="<%= @movie_id %>" type="hidden" name="id" /> <!--update의 id 추가해야함-->
        <div class="row"> 
            <div class="col-md-4"></div>
            <div class="col-md-8">
                Title : 
                <div class="form-group">
                    <input type="text" type="email" class="form-control" id="title" name="title" value="<%= @movie.title %>">
                </div>
                Director : 
                <div class="form-group">
                    <input type="text" type="email" class="form-control" id="director" name="director" value="<%= @movie.director %>">
                </div>
                Genre : 
                <div class="form-group">
                    <input type="text" type="email" class="form-control" id="genre" name="genre" value="<%= @movie.genre %>">
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">수정하기</button>
    </form>
</div>
    